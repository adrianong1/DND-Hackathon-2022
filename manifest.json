{
    "name": "Acronym Helper",
    "description": "Chrome Extension that helps with DND related acronyms",
    "version": "1.0.0",
    "manifest_version": 3,
    "action":{
        "default_popup":"popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "css": ["overlay.css"],
        "js": ["overlay.js"]
    }],
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "contextMenus"
    ]
}